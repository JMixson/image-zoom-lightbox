{
  "manifest_version": 3,
  "name": "Image Zoom Lightbox",
  "version": "1.1.1",
  "description": "Open an Edge-like image zoom lightbox by double-pressing Ctrl while hovering an image.",
  "permissions": ["storage"],
  "options_page": "options.html",
  "action": {
    "default_title": "Image Zoom Lightbox",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
